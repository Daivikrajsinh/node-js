    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: #e2e8f0;
    background-color: #0f172a;
    overflow-x: hidden;
}

nav {
    background: rgba(15, 23, 42, 0.95);
    padding: 1.3rem 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    color: #fff;
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
    letter-spacing: 0.8px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.logo-icon {
    color: #f59e0b;
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 2rem;
}

.nav-links li a {
    color: #e2e8f0;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
}

.nav-links li a:hover {
    color: #f59e0b;
    background-color: rgba(245, 158, 11, 0.1);
}

.nav-links li a.active {
    color: #f59e0b;
    background-color: rgba(245, 158, 11, 0.1);
}

.nav-links li a.active::after {
    content: '';
    position: absolute;
    width: 60%;
    height: 2px;
    background: #f59e0b;
    bottom: -3px;
    left: 50%;
    transform: translateX(-50%);
}

.hero-section {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.7));
    padding: 6rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://images.unsplash.com/photo-1639762681057-408e52192e55?q=80&w=2232&auto=format&fit=crop') center/cover no-repeat;
    opacity: 0.2;
    z-index: -1;
}

.hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
}

.hero-section h1 {
    font-size: 3.5rem;
    color: #fff;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
    animation: slideIn 0.9s ease-out;
    line-height: 1.2;
}

.hero-section h1 span {
    color: #f59e0b;
    position: relative;
}

.hero-section h1 span::after {
    content: '';
    position: absolute;
    bottom: 5px;
    left: 0;
    width: 100%;
    height: 8px;
    background: rgba(245, 158, 11, 0.3);
    z-index: -1;
    border-radius: 4px;
}

.hero-section p {
    font-size: 1.2rem;
    color: #cbd5e0;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    animation: fadeIn 1.1s ease-out;
}

.services-section {
    max-width: 1400px;
    margin: 4rem auto;
    padding: 0 2rem;
}

.services-section h2 {
    font-size: 2.5rem;
    color: #fff;
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    display: inline-block;
    left: 50%;
    transform: translateX(-50%);
}

.services-section h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #1e3a8a, #f59e0b);
    border-radius: 2px;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
}

.service-card {
    background: rgba(30, 41, 59, 0.7);
    padding: 2.5rem 2rem;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
    text-align: center;
    transition: all 0.4s ease;
    animation: fadeInUp 1.3s ease-out;
    border: 1px solid rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
}

.service-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.03), transparent);
    transform: rotate(45deg);
    transition: all 0.6s ease;
    opacity: 0;
}

.service-card:hover::before {
    opacity: 1;
    animation: shine 1.5s;
}

.service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
    border-color: rgba(245, 158, 11, 0.2);
}

.service-icon {
    font-size: 3.5rem;
    color: #f59e0b;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
}

.service-card:hover .service-icon {
    transform: scale(1.1) rotate(5deg);
}

.service-card h3 {
    font-size: 1.6rem;
    color: #fff;
    margin-bottom: 1.2rem;
    font-weight: 600;
}

.service-card p {
    font-size: 1.1rem;
    color: #94a3b8;
    margin-bottom: 2rem;
    line-height: 1.7;
}

.service-card a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #f59e0b;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    background: rgba(245, 158, 11, 0.1);
}

.service-card a:hover {
    color: #fff;
    background: rgba(245, 158, 11, 0.3);
    transform: translateX(5px);
}

.service-card a i {
    transition: transform 0.3s ease;
}

.service-card a:hover i {
    transform: translateX(3px);
}

.cta-section {
    margin: 6rem auto;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.9), rgba(245, 158, 11, 0.9));
    color: #fff;
    border-radius: 16px;
    text-align: center;
    animation: fadeIn 1.7s ease-out;
    max-width: 1200px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(30, 58, 138, 0.3);
}

.cta-section::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent 70%);
    animation: rotate 20s linear infinite;
    opacity: 0.3;
}

.cta-content {
    position: relative;
    z-index: 1;
}

.cta-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
}

.cta-section p {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 2.5rem;
    opacity: 0.9;
}

.cta-section a {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    background: #fff;
    color: #1e3a8a;
    text-decoration: none;
    font-weight: 600;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
}

.cta-section a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: 0.5s;
}

.cta-section a:hover::before {
    left: 100%;
}

.cta-section a:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 0 3rem 2rem;
    color: #94a3b8;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 8px;
}

.back-link:hover {
    color: #f59e0b;
    background: rgba(245, 158, 11, 0.1);
    transform: translateX(-5px);
}

.back-link i {
    transition: transform 0.3s ease;
}

.back-link:hover i {
    transform: translateX(-3px);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

@keyframes shine {
    0% {
        left: -100%;
    }
    20% {
        left: 100%;
    }
    100% {
        left: 100%;
    }
}

/* Floating elements animation */
.floating {
    animation: floating 6s ease-in-out infinite;
}

@keyframes floating {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0px); }
}

@media (max-width: 1024px) {
    .services-grid {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
}

@media (max-width: 768px) {
    .hero-section {
        padding: 4rem 1.5rem;
    }
    
    .hero-section h1 {
        font-size: 2.5rem;
    }

    .hero-section p {
        font-size: 1rem;
    }

    .nav-links {
        gap: 1rem;
    }

    .nav-links li a {
        font-size: 0.9rem;
        padding: 0.5rem 0.8rem;
    }

    .services-section h2 {
        font-size: 2rem;
    }

    .cta-section h2 {
        font-size: 1.8rem;
    }
    
    .service-card {
        padding: 2rem 1.5rem;
    }
}

@media (max-width: 480px) {
    .nav-container {
        flex-direction: column;
        gap: 1rem;
    }
    
    .hero-section h1 {
        font-size: 2rem;
    }
    
    .services-grid {
        grid-template-columns: 1fr;
    }
    
    .cta-section {
        padding: 3rem 1.5rem;
    }
}
    </style>
